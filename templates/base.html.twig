<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
                <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">-->
                <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
                <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>

<header>

    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">

        <a class="navbar-brand" href="#"><img src="{{ asset('hook.png') }}" width="60" height="60" class="d-inline-block mr-1 align-bottom" alt="">My ToDoList</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainmenu" aria-controls="mainmenu" aria-expanded="false" aria-label="Przełącznik nawigacji">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainmenu">

            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="{{ url('tasklist_index') }}"> Listy zadań </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ url('task_index') }}"> Zadania </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ url('note_index') }}"> Notatki </a>
                </li>

                {% if is_granted ('ROLE_ADMIN') %}

                <li class="nav-item">
                    <a class="nav-link" href="{{ url('category_index') }}"> Kategorie </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ url('tag_index') }}"> Tagi </a>
                </li>
                {%  endif %}

            </ul>

        </div>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div>
                <p>
                  Hello,
                <a href="{{ url('user-data_index') }}">
                    {{ app.user.email }}</a>
                </a>
                </p>
            </div>
            <div>
                <a href="{{ url('app_logout') }}" class="btn btn-light">
                    {{ 'action_logout'|trans }}</a>
                </a>
            </div>
        {% else %}
            <div>
                <a href="{{ url('app_login') }}" class="btn btn-light">
                    {{ 'action_login'|trans }}</a>
                </a>
            </div>
        {% endif %}
    </nav>

</header>

<div class="container-fluid">
    {% include 'default/_flash_messages.html.twig' %}
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>